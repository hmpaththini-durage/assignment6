<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
        <hr />
        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
            <div class="form-group">
                <label>First Name</label>
                <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" required />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" name="email" type="email" value="{{viewData.student.email}}" required />
            </div>
            <div class="form-group">
                <label>Course</label>
                <select class="form-control" name="course">
                    {{#each viewData.courses}}
                    <option value="{{this.courseId}}" {{#if this.selected}}selected{{/if}}>{{this.courseCode}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label>Year</label>
                <input class="form-control" name="year" type="number" value="{{viewData.student.year}}" required />
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </main>
</div>
